function MiniStat({ label, value }: { label: string; value: string }) { return ( 
{label}
{value}
); }
function AgeGate({ open, onConfirm }: { open: boolean; onConfirm: () => void }) { return ( {open ? ( <motion.div className="fixed inset-0 z-50 grid place-items-center bg-zinc-950/70 p-4 backdrop-blur" initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} > <motion.div className="w-full max-w-lg rounded-[2rem] border border-zinc-800 bg-zinc-950 p-6 shadow-2xl" initial={{ y: 12, opacity: 0, scale: 0.98 }} animate={{ y: 0, opacity: 1, scale: 1 }} exit={{ y: 12, opacity: 0, scale: 0.98 }} transition={{ duration: 0.25 }} > 
Age verification
This prototype site describes a THC product concept intended for adults. Please confirm you are 21+. 
       <div className="mt-6 flex flex-col gap-3 sm:flex-row">
          <Button
            className="h-11 rounded-2xl bg-emerald-500 text-zinc-950 hover:bg-emerald-400"
            onClick={onConfirm}
          >
            I am 21+
          </Button>
          <Button
            variant="outline"
            className="h-11 rounded-2xl border-zinc-700 bg-transparent text-zinc-100 hover:bg-zinc-900"
            onClick={() => window.location.reload()}
          >
            Not 21
          </Button>
        </div>

        <div className="mt-4 text-xs text-zinc-500">
          Note: This is an age gate for demonstration. Production sites should implement
          jurisdiction-specific compliance.
        </div>
      </motion.div>
    </motion.div>
  ) : null}
</AnimatePresence>
 
); }

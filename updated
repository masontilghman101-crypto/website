function useLocalStorageBoolean(key: string, initial = false) { const [val, setVal] = useState(() => { try { const raw = localStorage.getItem(key); if (raw === null) return initial; return raw === "true"; } catch { return initial; } }); useEffect(() => { try { localStorage.setItem(key, String(val)); } catch { // ignore } }, [key, val]); return [val, setVal] as const; }
